{
  "workflow_description": {
    "name":"RNA_editing_analysis",
    "version": 1.0,
    "label":"RNA editing analysis",
    "type":"analysis",
    "inputs":"mapped/{sample}.bam",
    "outputs":[
      "results/{sample}.mismatch_cov_tab.tsv",
      "logs/{sample}/*"
    ],
    "reports":[
      "reports/RNA_editing_analysis/*"
    ]
  },
